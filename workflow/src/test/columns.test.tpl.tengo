// columns-test

self := import("@platforma-sdk/workflow-tengo:tpl")
assets := import("@platforma-sdk/workflow-tengo:assets")
render := import("@platforma-sdk/workflow-tengo:render")

getPresetTpl := assets.importTemplate(":get-preset")
calculateColumnsParamsTpl := assets.importTemplate(":calculate-pfconv-params")

self.defineOutputs("conf")

self.body(func(inputs) {
	preset := inputs.preset
	params := inputs.params

	getPreset := render.create(getPresetTpl, {
		preset: preset,
		params: params
	})

	pfconvConfig := render.create(calculateColumnsParamsTpl, {
		preset: getPreset.output("preset"),
		specs: getPreset.output("presetSpecForBack")
	})
	paramsById := pfconvConfig.output("paramsById")
	paramsByKey := pfconvConfig.output("paramsByKey")
	featureParams := pfconvConfig.output("featureParams")
	clonotypeKeyAxes := pfconvConfig.output("clonotypeKeyAxes")

	return {
		conf: pfconvConfig,
		paramsById: paramsById,
		paramsByKey: paramsByKey,
		featureParams: featureParams,
		clonotypeKeyAxes: clonotypeKeyAxes
	}
})
